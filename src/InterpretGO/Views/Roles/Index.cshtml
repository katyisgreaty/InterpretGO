@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="parallax-red top-parallax-medium">
    <h2 class="parallax-header">Roles</h2>
</div>

<div class="chunk chunk-small">
    @Html.ActionLink("Create New Role", "Create") | @Html.ActionLink("Manage User Roles", "Assign")
    <hr />
    <div>
        @foreach (var role in Model)
        {
            <p>
                <strong>@role.Name | </strong>
                <span onclick="return confirm('Are you sure to delete?')"><a href="/Roles/Delete?RoleName=@role.Name" class="delLink" style="color:red;">Delete</a></span> |
                @Html.ActionLink("Edit", "Edit", new { roleName = @role.Name })
            </p>
        }
    </div>
</div>

<div class="parallax-red bottom-parallax-large"></div>
<div class="parallax-red bottom-parallax-large"></div>