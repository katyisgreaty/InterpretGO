@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="parallax-red top-parallax-medium">
    <h2 class="parallax-header">Manage User Roles</h2>
</div>

<div class="chunk chunk-small">
    <p class="assign-role">Add a role to user</p>
    <div class="assign-role-div role-div">
        @using (Html.BeginForm("AddRole", "Roles"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-sm-6">
                    <label>Username: </label>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("UserName", "Select User")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <label>Role name: </label>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("RoleName", "Select Roles")
                </div>
            </div>
                <input class="btn btn-custom save-button" type="submit" value="Save"/>
        }
    </div>
</div>

<div class="parallax-red parallax-small">
    <p class="assign-role">Get roles for a user</p>
    <div class="assign-role-div role-div">
        @using (Html.BeginForm("GetRoles", "Roles"))
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-sm-6">
                    <label>Username : </label>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("UserName", "Select User")
                </div>
            </div>

            <input type="submit" value="Get roles" class="btn btn-custom save-button" />
        }

        @if (ViewBag.RolesForThisUser != null)
        {
            <div>
                <h4><strong>Roles for this user</strong></h4>
                <ol>
                    @foreach (string s in ViewBag.RolesForThisUser)
                    {
                        <li>@s</li>
                    }
                </ol>
            </div>
        }
    </div>
</div>

<div class="chunk chunk-small">
    <p class="assign-role">Delete a user from a role</p>

    <div class="assign-role-div role-div">
        @using (Html.BeginForm("DeleteRole", "Roles"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="row">
                <div class="col-sm-6">
                    <label>Username : </label>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("UserName", "Select User")
                </div>
            </div>

            <div class="row">
                <div class="col-sm-6">
                    <label>Role Name: </label>
                </div>
                <div class="col-sm-6">
                    @Html.DropDownList("RoleName", "Select Roles")
                </div>
            </div>

            <input type="submit" value="Delete user from role" class="btn btn-custom save-button" />
        }
    </div>
</div>

<div class="parallax-red bottom-parallax-medium"></div>