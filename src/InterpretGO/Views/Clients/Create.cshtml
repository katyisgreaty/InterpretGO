@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using InterpretGO.Models
@model InterpretGO.ViewModels.ClientsViewModel

<h2>Add new Deaf Client</h2>

@using (Html.BeginForm())
{
    <div class="row">
        <span class="form-label">@Html.LabelFor(model => model.Client.Name)</span>
        @Html.TextBoxFor(model => model.Client.Name, new { @required = "true" })
    </div>

    <div class="row">
        <span class="form-label"><label>Language Preference</label></span>
            @Html.DropDownListFor(model => model.Client.Language,
                    @Model.Languages,
                    "Select Language")
    </div>

    <div class="row">
        <span class="form-label">@Html.LabelFor(model => model.Client.Email)</span>
        @Html.TextBoxFor(model => model.Client.Email)
</div>

    <div class="row">
        <span class="form-label">@Html.LabelFor(model => model.Client.Phone)</span>
        @Html.TextBoxFor(model => model.Client.Phone)
</div>

    <div class="row">
        <input class="btn add-client-button" type="submit" value="Add new deaf client" />
    </div>
}

<p>@Html.ActionLink("Back to list of Deaf clients", "Index")</p>
