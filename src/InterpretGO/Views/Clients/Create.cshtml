@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model InterpretGO.Models.Client

<h2>Add new Deaf Client</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @required = "true" })

    @Html.LabelFor(model => model.Language)
    @Html.TextBoxFor(model => model.Language, new { @required = "true" })

    @Html.LabelFor(model => model.Email)
    @Html.TextBoxFor(model => model.Email)

    @Html.LabelFor(model => model.Phone)
    @Html.TextBoxFor(model => model.Phone)

    <input type="submit" value="Add new deaf client" />
}
<p>@Html.ActionLink("Back to list of Deaf clients", "Index")</p>
</body>