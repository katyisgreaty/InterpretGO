@{
    ViewData["Title"] = "Create Client";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model InterpretGO.Models.Client

<div class="parallax-purple top-parallax-medium"></div>
<div class="chunk chunk-small">
    <h2>Are you sure you want to delete this?</h2>
    <hr />
    @Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)
    @using (Html.BeginForm())
    {
        <input class="btn btn-custom save-button" type="submit" value="Delete" />
    }
</div>
<div class="parallax-purple bottom-parallax-large parallax-link">@Html.ActionLink("Back to List", "Index")
</div>
