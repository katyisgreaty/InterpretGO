@if (User.IsInRole("Interpreter"))
{
    <h3 class="list-subhead">Your Confirmed Assignments</h3>
    <table class="table list-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
