@{
    ViewData["Title"] = "Index Interpreters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<InterpretGO.Models.Interpreter>

<div class="parallax-green top-parallax-medium">
    <h2 class="parallax-header">Interpreters</h2>
</div>

@if (!User.Identity.IsAuthenticated)
{
    <div class="chunk chunk-small">
        <p>Sign in or Register to see more details!</p>
    </div>
    <div class="parallax-green parallax-xxsmall"></div>
}

<div class="chunk chunk-small">
    <table class="table">
        <tr>
            <th>Interpreter Name</th>
            <th>Specialty</th>
            @if (User.Identity.IsAuthenticated)
            {
                <th>Email Address</th>
                <th>Options</th>
            }
        </tr>

        @foreach (var listInterpreter in Model)
        {
            @if (listInterpreter.Name != "No Interpreter Preference")
            {

                <tr>
                    <td class="interpreter-index-name">
                        @Html.DisplayFor(modelInterpreter => listInterpreter.Name)
                    </td>
                    <td class="interpreter-index-name">
                        @Html.DisplayFor(modelInterpreter => listInterpreter.Specialty)
                    </td>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <td>@Html.DisplayFor(modelInterpreter => listInterpreter.Email)</td>

                        <td class="interpreter-index-list">
                            @Html.ActionLink("Details", "Details", new { id = listInterpreter.InterpreterId })
                        </td>
                        @if (User.IsInRole("Admin"))
                        {
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = listInterpreter.InterpreterId })
                            </td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = listInterpreter.InterpreterId })
                            </td>;
                        }
                    }
                </tr>
            }
        }
    </table>

    @if(User.IsInRole("Admin"))
    {
        <p>@Html.ActionLink("Add new interpreter", "Create")</p>
    }
</div> 
<div class="parallax-green bottom-parallax-large"></div>