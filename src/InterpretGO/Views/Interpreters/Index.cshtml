@{
    ViewData["Title"] = "Index Interpreters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<InterpretGO.Models.Interpreter>



<h2>Interpreters</h2>
@if (!User.Identity.IsAuthenticated)
{
    <p>Sign in or Register to see more details!</p>
}
<ul>
    @foreach (var listInterpreter in Model)
    {
        @if (listInterpreter.Name != "No Interpreter Preference")
        {
            <li>
                <span class="interpreter-index-name">
                    @Html.DisplayFor(modelInterpreter => listInterpreter.Name)
                </span>
                @if (User.Identity.IsAuthenticated)
                {
                    <span class="interpreter-index-list">
                        @Html.ActionLink("Details", "Details", new { id =   listInterpreter.InterpreterId })
                    </span>

                    @if (User.IsInRole("Admin"))
                    {
                    <span class="interpreter-index-list">
                        @Html.ActionLink("Edit", "Edit", new { id = listInterpreter.InterpreterId })
                    </span>
                    <span class="interpreter-index-list">
                        @Html.ActionLink("Delete", "Delete", new { id = listInterpreter.InterpreterId })
                    </span>;
                    }
                }
            </li>

        }
    }
</ul>
@if (User.Identity.IsAuthenticated)
{
    <p>@Html.ActionLink("Add new interpreter", "Create")</p>
}
