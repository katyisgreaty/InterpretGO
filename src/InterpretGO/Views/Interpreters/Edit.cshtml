@{
    ViewData["Title"] = "Edit Interpreters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model InterpretGO.Models.Interpreter

<div class="parallax-green top-parallax-medium">
    <h2 class="parallax-header">Edit Interpreter</h2>
</div>

<div class="chunk chunk-small">
    <h4>Edit this Interpreter: @Html.DisplayFor(model => model.Name)</h4>

    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.InterpreterId)

        @Html.LabelFor(model => model.Name)
        @Html.EditorFor(model => model.Name)

        @Html.LabelFor(model => model.Specialty)
        @Html.EditorFor(model => model.Specialty)

        @Html.LabelFor(model => model.Certification)
        @Html.EditorFor(model => model.Certification)

        @Html.LabelFor(model => model.Rate)
        @Html.EditorFor(model => model.Rate)

        @Html.LabelFor(model => model.Email)
        @Html.EditorFor(model => model.Email)

        @Html.LabelFor(model => model.Phone)
        @Html.EditorFor(model => model.Phone)

        <input type="submit" value="Save" />
    }
</div>
<div class="parallax-green bottom-parallax-large parallax-link">
    <p>@Html.ActionLink("Back to list", "Index")</p>
</div>